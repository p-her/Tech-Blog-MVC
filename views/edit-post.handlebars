<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div  class="container">
        <div class="wrapper">
             <div class="title">
                <p><b>Edit Post</b></p>
            </div>
   
             <form class="edit-post-form">
                <div class="row">
                    
                    <textarea class="textarea-field" id="post-title" >{{post.title}}</textarea>
                </div>
                <div class="row">
                    <p><b>Content</b></p>
                    <textarea  class="textarea-field" id="post-content" >{{post.post_content}}</textarea>
                </div>

                <button type="submit">Save post</button>
                <button type="button" class="delete-post-btn">Delete post</button>
            </form>
         
        </div>

 
</article>

<script src="/javascript/edit-post.js"></script>
